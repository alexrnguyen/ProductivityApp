<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AddHabitFragment">

    <EditText
        android:id="@+id/et_habit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:ems="10"/>

    <EditText
        android:id="@+id/et_habit_description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top"
        android:hint="Description (optional)"
        android:ems="10"/>
    
    <Spinner
        android:id="@+id/spinner_duration_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ca.antonious.materialdaypicker.MaterialDayPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_cancel_add_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:backgroundTint="#d10000"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="12sp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btn_add_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:backgroundTint="#0cc916"
            android:text="Add"
            android:textColor="@color/black"
            android:textSize="12sp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>


</LinearLayout>